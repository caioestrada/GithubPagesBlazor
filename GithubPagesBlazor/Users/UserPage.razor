@page "/user"

<h3>User Page</h3>

<button class="btn btn-success" @onclick="InsertUser">Inserir Usuario</button>


<table class="table">
    <thead>
        <tr>
            <th>Avatar</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in users)
        {
            <tr>
                <td><img src="@user.Avatar" alt="user avatar" width="50" height="50"></td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td><button @onclick="@(e=>DeleteUser(user.Id))">Delete</button></td>
            </tr>
        }
    </tbody>
</table>